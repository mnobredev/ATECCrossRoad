<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mario.ateccrossroad.MainActivity"
    android:background="@drawable/massa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btPlay"
            android:layout_weight="1"
            />

        <Button
            android:text="About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btAbout"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout">

        <ImageButton
            android:background="@drawable/sangui1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sangui"
            android:layout_weight="1"
          />

        <ImageButton
            android:id="@+id/nsilva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nsilva"
            android:layout_weight="1"
            android:layout_gravity="center"
        />

        <ImageButton
            android:background="@drawable/dario"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_gravity="bottom"
            android:id="@+id/dario"
            android:layout_weight="1"
            />


    </LinearLayout>


</RelativeLayout>